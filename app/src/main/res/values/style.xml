<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stroke</item>
        <item name="android:textColorHint">@color/texthint</item>
        <item name="backgroundColor">@color/white</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TitleText" parent="">

        <item name="android:textAlignment">center</item>
       <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="subTitle" parent="">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@color/btn</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/btn</item>
       <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>


    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>


    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">20dp</item>
        <item name="cornerSize">20dp</item>
        <!--<item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>-->
    </style>

    <style name="SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">1dp</item>
    </style>

    <style name="YourCardView" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor">@color/texthint</item>
        <item name="cardElevation">1dp</item>
        <item name="shapeAppearanceOverlay">@style/MediumComponent</item>
    </style>
    <style name="CardWithOutCornerRadius" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor">@color/texthint</item>
        <item name="cardElevation">1dp</item>
        <item name="shapeAppearanceOverlay">@style/SmallComponent</item>
        <item name="background">@drawable/tex_tline</item>
        <item name="strokeColor">@drawable/tex_tline</item>
    </style>

    <style name="IconorImageButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconGravity">textTop</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rippleColor">@color/texthint</item>
        <item name="android:layout_margin">10dp</item>
        <item name="iconTint">@color/btn</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/btn</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>