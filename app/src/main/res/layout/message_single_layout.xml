<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".chat.SingleMessageActivity">
    <com.google.android.material.card.MaterialCardView
        app:cardElevation="3dp"
        android:layout_margin="5dp"
        style="@style/YourCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/logo"
                app:civ_border_color="@color/texthint"
                app:civ_border_width="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        style="@style/Caption"
                        android:textSize="12sp"
                        android:text="sharmin binta sayed"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:textColor="@color/basecolor"
                        android:padding="5dp"
                        style="@style/Caption"
                        android:textSize="5sp"
                        android:text="12/12/1212"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:maxLines="1"
                    android:textColor="@color/text_hint"
                    android:padding="5dp"
                    style="@style/Caption"
                    android:textSize="12sp"
                    android:text="Itâ€™s the one week of the year in which you get "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>