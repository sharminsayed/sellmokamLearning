<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".post.payment.SelectPaymentActivity">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_marginEnd="26dp"
       android:layout_marginStart="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
           android:layout_marginTop="50dp"
            android:text="Select an item"
            style="@style/Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/read_more_textview"
            android:layout_centerInParent="true"
            android:layout_below="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.radiobutton.MaterialRadioButton
                style="@style/RadioButton"
                android:text="PayonLine"
               />
        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_below="@id/read_more_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="25dp">

            <com.google.android.material.button.MaterialButton
                style="@style/IconorImageButton"
                app:icon="@drawable/ic_gallery"
                android:text="bkash"
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                style="@style/IconorImageButton"
                app:icon="@drawable/ic_gallery"
                android:text="bkash"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
            style="@style/IconorImageButton"
            app:icon="@drawable/ic_gallery"
            android:text="bkash"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                android:layout_width="0dp"
                style="@style/IconorImageButton"
                app:icon="@drawable/ic_gallery"
                android:text="bkash"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@+id/button5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button3"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button5"
                android:layout_width="0dp"
                style="@style/IconorImageButton"
                app:icon="@drawable/ic_gallery"
                android:text="bkash"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button4"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.radiobutton.MaterialRadioButton
                style="@style/RadioButton"
                android:text="Pay buy boucher"/>
        </RadioGroup>
        <com.google.android.material.button.MaterialButton
            style="@style/IconorImageButton"
            app:icon="@drawable/ic_gallery"
            android:text="Voucher"
            android:layout_below="@+id/radio"

            />

    </RelativeLayout>

<com.google.android.material.button.MaterialButton
    android:text="Continue"
    style="@style/Button"
    android:layout_marginBottom="42dp"
    android:layout_marginTop="48dp"
    android:layout_marginEnd="26dp"
    android:layout_marginStart="26dp" />


</LinearLayout>