<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".post.OtherPostDetailsActivity">
    <androidx.appcompat.widget.Toolbar
        app:navigationIcon="@drawable/ic_backarro"
        app:title="Add details"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>
<androidx.core.widget.NestedScrollView
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            style="@style/YourCardView"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_color="@color/texthint"
                    app:civ_border_width="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    android:id="@+id/img"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"/>
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:maxLines="1"
                        android:id="@+id/name"
                        style="@style/Subtitle1"
                        android:text="@string/demo_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/btn"

                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_below="@+id/name"
                        style="@style/Caption"
                        android:text="(See user details)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_below="@id/read_more_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="25dp">

            <com.google.android.material.button.MaterialButton

                style="@style/IconorImageButton"
                app:icon="@drawable/ic_baseline_message_24"
                android:text="Message"
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton

                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                style="@style/IconorImageButton"
                app:icon="@drawable/ic_baseline_email_24"
                android:text="E-mail"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_marginEnd="5dp"
                style="@style/IconorImageButton"
                app:icon="@drawable/ic_baseline_call_24"
                android:text="call"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                android:layout_width="0dp"
                style="@style/IconorImageButton"
                app:icon="@drawable/ic_baseline_read_more_24"
                android:text="more"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button3"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/texthint"
            app:strokeWidth="1dp"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.smarteist.autoimageslider.SliderView
                android:background="@drawable/logo"
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />

        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="product Name:"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="@string/demo_product_name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Posted on :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/basecolor"
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="@string/demo_date"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="location :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="@string/demo_address"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Product category :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="@string/demo_product_name"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Product sub category :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="@string/demo_product_name"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"

                    android:text="Market place :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Retail"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Product condition :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Fresh"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Retails market price :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="@string/retails_market_price"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="Product Description :"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/Caption"
                    android:textSize="16sp"
                    android:text="@string/demo_text"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/help"
                android:text="Need sell mokam help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_below="@+id/help"
                android:text="Need sell mokam help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/btn"
            android:text="Promote this add"
            style="@style/IconorImageButton"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="See all add from this member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/add_from_other_member_single_layout"></include>
        <include layout="@layout/add_from_other_member_single_layout"></include>

       <!-- <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>-->

        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="Similer add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/add_from_other_member_single_layout"></include>
        <include layout="@layout/add_from_other_member_single_layout"></include>
       <!-- <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>-->


    </LinearLayout>

</androidx.core.widget.NestedScrollView>



</RelativeLayout>